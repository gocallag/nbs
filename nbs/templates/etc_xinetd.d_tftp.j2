# TFTP configuration
#
# {{ ansible_managed }}
service tftp
{
  socket_type  = dgram
  protocol     = udp
  wait         = yes
  user         = root
  server       = /usr/sbin/in.tftpd
  server_args  = -v -v -v {{ nbs_tftp_server_args }} {{ nbs_tftp }}
  disable      = no
  per_source   = 11
  cps          = 100 2
  flags        = IPv4
}
